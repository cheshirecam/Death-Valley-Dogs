<h1>Listing camps</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Rating</th>
    <th>Location</th>
  </tr>

<% @camps.each do |camp| %>
  <tr>
    <td><%=h camp.name %></td>
    <td><%=h camp.description %></td>
    <td><%=h camp.rating %></td>
    <td><%=h camp.location %></td>
    <td><%= link_to 'Show', camp %></td>
    <td><%= link_to 'Edit', edit_camp_path(camp) %></td>
    <td><%= link_to 'Destroy', camp, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New camp', new_camp_path %>