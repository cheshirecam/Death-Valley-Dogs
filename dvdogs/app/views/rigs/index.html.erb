<% @rigs.each do |rig| %>
  <tr>
  	<td><%= link_to rig.dog.name + "\'s " + rig.make, rig %></td>
    <td><%=h rig.name %></td>
    <td><%=h rig.picture %></td>
    <td><%= render :partial => "/shared/crud_links_edit_delete_small", :locals => {
        :obj => rig
     } %></td>
  </tr>
<% end %>
</table>

