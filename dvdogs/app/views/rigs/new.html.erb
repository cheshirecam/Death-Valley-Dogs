<h1>New rig</h1>

<% form_for(@rig,:html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :dog_id, "Owner" %><br/>
    <%= f.collection_select(:dog_id, Dog.by_name, :id, :name) %>
  </p>
  <p>
    <%= f.label :active %><br/>
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :make %><br />
    <%= f.text_field :make %>
  </p>
  <p>
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </p>
  <p>
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :engine %><br />
    <%= f.text_field :engine %>
  </p>
  <p>
    <%= f.label :tires %><br />
    <%= f.text_field :tires %>
  </p>
  <%= render :partial => "/shared/checkbox_selector", 
    				:locals => { :label => "Trips", 
					:item_array => Trip.by_date, 
					:check_field => @rig.trips,
					:array_to_update => "rig[trip_ids][]" } %>

  <p>
    <%= f.label 'Photo' %><br />
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', rigs_path %>