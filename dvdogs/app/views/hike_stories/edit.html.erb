<h1>Editing Write-Up</h1>

<% form_for(@hike_story,:html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :dog_id, "According to" %><br/>
    <%= f.collection_select(:dog_id, Dog.all, :id, :name) %>
  </p>
  <p>
    <%= f.label :hike_id, "Hike" %><br/>
    <%= f.collection_select(:hike_id, Hike.all, :id, :name) %>
  </p>
  <p>
    <%= f.label 'Photo' %><br />
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.label "Write-up:" %><br />
    <%= f.text_area :description, :class => "mceEditor" %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @hike_story %> |
<%= link_to 'Back', hike_stories_path %>