
<h1><%=h @hike.name %> Hike</h1>

<table class="maroonRoundedBorder">
  
<tr>
  <th class="firstHorizontalColumnHeader" >Date:</th>
  <th>Trip:</th>
  <th class="lastHorizontalColumnHeader" >Dogs:</th>
</tr>
<tr>
  <td class="horizontalData"><%=h @hike.date %></td>
  <td class="horizontalData"><%= link_to @hike.trip.name, @hike.trip %></td>
  <td class="horizontalData">
      <% @hike.dogs.each do |obj| %>
        <%= link_to obj.name, obj %><br>
      <% end %>
  </td>
</tr>

</table>
<p>
<%= link_to edit_icon_large, edit_hike_path(@hike) %> |
<%= link_to back_icon_large, hikes_path %> | 
<%= link_to "Add a write-up for this hike", new_hike_story_path(:hike_id => @hike.id) %>
</p>
<% @hike.hike_stories.each do |story| %>
  <% dog = Dog.find(story.dog_id).name %>
  <div class="roundedTitleArea">According to <%= dog %>... <%= link_to edit_icon, edit_hike_story_path(story) %>  </div>
  <div class="roundedTextArea"><p><%=h story.description %></p></div>
  <br>
<% end %>

