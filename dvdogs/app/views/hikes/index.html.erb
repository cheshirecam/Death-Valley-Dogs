<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Album</th>
  </tr>

<% @hikes.each do |hike| %>
  <tr>
    <td><%= link_to hike.name, hike %></td>
    <td><%=h hike.date %></td>
    <td><%=h hike.album %></td>
    <td><%= render :partial => "/shared/crud_links_edit_delete_small", :locals => {
        :obj => hike
     } %></td>
  </tr>
<% end %>
</table>

