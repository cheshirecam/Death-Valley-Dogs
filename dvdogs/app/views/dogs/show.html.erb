<div class="showTitleObject"><%=h @dog.name %> <%= @dog.family == "Hominid" ? boots_icon_white : paws_icon_white %></div>

<table><tr>
  <td>
    <% if @dog.photo.exists? then %>
      <%= image_tag @dog.photo.url(:large) %>
    <% end %>
  </td>
<td>

<table class="maroonRoundedBorder">
<tr>
  <th class="firstVerticalColumnHeader">Age:</th>
  <td><%=h age(@dog.birth_date) %></td>
</tr>

<% unless @dog.ham == nil || @dog.ham.strip.size == 0 %>
<tr>
  <th>Ham:</th>
  <td><%=h @dog.ham.upcase %></td>
</tr>
<% end %>

<tr>
  <th>Known for:</th>
  <td><ul>
    <% if @dog.known_for != nil %>
      <% @dog.known_for.each_line do |kf| %>
        <li><%=h kf %></li>
      <% end %>
    <% end %>
  </ul></td>
</tr>

  <%= render :partial => "/shared/show_table_list", 
    				:locals => { :label => "Trips", :obj_array => @dog.trips } %>
  <%= render :partial => "/shared/show_table_list", 
    				:locals => { :label => "Hikes", :obj_array => @dog.hikes } %>
  <%= render :partial => "/shared/show_table_list", 
    				:locals => { :label => "Rigs", 
                         :header_class => "lastVerticalColumnHeader",
    				             :obj_array => @dog.rigs } %>

</table>
</td></table>

<%= render :partial => "/shared/crud_links_edit_new_list", :locals => { 
    :obj => @dog
 } %>
