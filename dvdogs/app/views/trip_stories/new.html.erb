<h1>New Write-up</h1>
<% @trip_story.trip_id = params[:trip_id] %>
<% form_for(@trip_story,:html => { :multipart => true }) do |f| %>

  <%= f.error_messages %>
  <p>
    <%= f.label :dog_id, "According to" %><br/>
    <%= f.collection_select(:dog_id, Dog.all, :id, :name) %>
  </p>
  <p>
    <%= f.label :trip_id, "Trip" %><br/>
    <%= f.collection_select(:trip_id, Trip.all, :id, :name) %>
  </p>
  <p>
    <%= f.label 'Photo' %><br />
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.label "Synopsis to show in list:" %><br />
    <%= f.text_area :short_description %>
  </p>
  <p>
    <%= f.label "Write-up:" %><br />
    <%= f.text_area :description, :class => "mceEditor" %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', trip_stories_path %>