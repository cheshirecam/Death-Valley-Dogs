<div class="showTitleObject"></div>
<table>

<% @trips.each do |trip| %>
  <tr>
    <td>
      <% if trip.photo.exists? then %>
        <%= link_to image_tag(trip.photo.url(:thumb)), trip %>
      <% end %>
    </td>
    <td><%=h trip.date.strftime('%Y-%b') %></td>
    <td>
      <% if trip.trip_stories.size > 0 then %>
      <%= link_to writeup_icon, trip, {:title => "View the write-up for this trip"} %>
      <% end %>  
    </td>
    <td><%= link_to trip.name, trip %></td>
    <td><%= render :partial => "/shared/crud_links_edit_delete_small", :locals => {
        :obj => trip
     } %></td>
  </tr>
<% end %>
</table>

